{
  "name": "Random Anton Chigurh",
  "version": "1.0",
  "description": "Bless your browser",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "background",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img16.png",
      "32": "img32.png",
      "48": "img48.png",
      "128": "img128.png"
    }
  },
  "icons": {
    "16": "img16.png",
    "32": "img32.png",
    "48": "img48.png",
    "128": "img128.png"
  },
  "web_accessible_resources": ["chigurh.jpg"]
}